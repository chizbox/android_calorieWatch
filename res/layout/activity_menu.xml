<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world" />

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/droidx" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:layout_x="15dp"
            android:layout_y="4dp"
            android:src="@drawable/finallogo" />

<Button
    android:id="@+id/bProgress"
    android:layout_width="153dp"
    android:layout_height="34dp"
    android:layout_x="90dp"
    android:layout_y="370dp"
    android:background="@drawable/blue"
    android:gravity="center"
    android:text="Progress" />

<Button
    android:id="@+id/bReport"
    android:layout_width="153dp"
    android:layout_height="34dp"
    android:layout_x="90dp"
    android:layout_y="330dp"
    android:background="@drawable/blue"
    android:gravity="center"
    android:text="Weekly Reports" />

<Button
    android:id="@+id/bDailylog"
    android:layout_width="153dp"
    android:layout_height="34dp"
    android:layout_x="90dp"
    android:layout_y="290dp"
    android:background="@drawable/blue"
    android:gravity="center"
    android:text="Daily Log" />

<Button
    android:id="@+id/bSearch"
    android:layout_width="153dp"
    android:layout_height="34dp"
    android:layout_x="90dp"
    android:layout_y="250dp"
    android:background="@drawable/blue"
    android:gravity="center"
    android:text="Food Search" />

<Button
    android:id="@+id/bSettings"
    android:layout_width="153dp"
    android:layout_height="34dp"
    android:layout_x="90dp"
    android:layout_y="410dp"
    android:background="@drawable/blue"
    android:gravity="center"
    android:text="Settings" />

<TextView
    android:id="@+id/textView1"
    android:layout_width="126dp"
    android:layout_height="wrap_content"
    android:layout_x="65dp"
    android:layout_y="166dp"
    android:text="@+id/textview6"
    android:textAppearance="?android:attr/textAppearanceLarge" />

    </AbsoluteLayout>

</RelativeLayout>